<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="6.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingTop="6.0dip" >

    <com.greattone.greattone.widget.MyRoundImageView
        android:id="@+id/iv_icon"
        android:layout_width="50.0dip"
        android:layout_height="50.0dip"
        android:scaleType="centerCrop" />

    <com.greattone.greattone.widget.MyTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_icon"
        android:layout_alignRight="@+id/iv_icon"
        android:layout_below="@+id/iv_icon"
        android:layout_marginTop="3.0dip"
             android:gravity="start"
        android:ellipsize="end"
        android:lines="1"
        android:text="阿什顿飞将北京人"
        android:textSize="@dimen/smalltext" />

    <com.greattone.greattone.widget.MyTextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_icon"
        android:layout_alignRight="@+id/iv_icon"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="3.0dip"
        android:ellipsize="end"
        android:lines="1"
        android:text="阿什顿飞将北京人"
        android:textSize="@dimen/smalltext" />

    <com.greattone.greattone.widget.MyTextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_icon"
        android:layout_alignRight="@+id/iv_icon"
        android:layout_below="@+id/tv_address"
        android:layout_marginTop="3.0dip"
        android:ellipsize="end"
        android:lines="1"
        android:text="阿什顿飞将北京人"
        android:textSize="@dimen/smalltext" />

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginStart="8.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_toEndOf="@+id/iv_icon"
        android:layout_toRightOf="@+id/iv_icon"
        android:orientation="horizontal" >

        <com.greattone.greattone.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言主题："
            android:textSize="@dimen/midtext" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="阿什顿飞将北京人"
            android:textSize="@dimen/midtext" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_title"
        android:layout_marginLeft="8.0dip"
        android:layout_marginStart="8.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_toEndOf="@+id/iv_icon"
        android:layout_toRightOf="@+id/iv_icon"
        android:orientation="horizontal" >

        <com.greattone.greattone.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言时间："
            android:textSize="@dimen/midtext" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="阿什顿飞将北京人"
            android:textSize="@dimen/midtext" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_time"
        android:layout_marginLeft="8.0dip"
        android:layout_marginStart="8.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_toEndOf="@+id/iv_icon"
        android:layout_toRightOf="@+id/iv_icon"
        android:orientation="horizontal" >

        <com.greattone.greattone.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言内容："
            android:textSize="@dimen/midtext" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="阿什顿飞将北京人"
            android:textSize="@dimen/midtext" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginStart="8.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_toEndOf="@+id/iv_icon"
        android:layout_toRightOf="@+id/iv_icon"
                android:layout_below="@+id/ll_content"
        android:orientation="horizontal" >

        <com.greattone.greattone.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复内容："
            android:textSize="@dimen/midtext" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="阿什顿飞将北京人"
            android:textSize="@dimen/midtext" />
    </LinearLayout>
	<com.greattone.greattone.widget.MyTextView 
	    android:id="@+id/btn_reply"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	            android:layout_marginRight="15.0dip"
        android:layout_marginEnd="15.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_bg2"
        android:textColor="@color/white"
                android:layout_below="@+id/ll_reply"
	    android:text="回复"
	    android:visibility="gone"/>
</RelativeLayout>