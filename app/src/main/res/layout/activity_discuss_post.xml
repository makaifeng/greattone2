<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.DiscussPostAct" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <com.greattone.greattone.widget.MyEditText
                android:id="@+id/activity_discuss_post_title"
                style="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/login_border"
                android:hint="主题"
                android:lines="1"
                android:padding="10dp"
                android:textSize="@dimen/bigtext" />

            <LinearLayout
                android:id="@+id/activity_discuss_post_type_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/login_border"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone" >

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="主题类型"
                    android:lines="1"
                    android:padding="10dp"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyTextView
                    android:id="@+id/activity_discuss_post_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:hint="请选择" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_next" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_discuss_post_cate_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/login_border"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="主题分类"
                    android:lines="1"
                    android:padding="10dp"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyTextView
                    android:id="@+id/activity_discuss_post_cate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="请选择" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_next" />
            </LinearLayout>

            <com.greattone.greattone.widget.MyEditText
                android:id="@+id/activity_discuss_post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/login_border"
                android:gravity="top"
                android:hint="内容"
                android:lines="1"
                android:minLines="5"
                android:padding="10dp"
                android:textSize="@dimen/bigtext" />

            <com.greattone.greattone.widget.MyButton
                android:id="@+id/btn_commit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15.0dip"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="30.0dip"
                android:background="@color/red_c30000"
                android:text="发布"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>