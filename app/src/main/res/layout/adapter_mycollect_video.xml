<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12.0dip"
        android:paddingLeft="10.0dip"
        android:paddingTop="12.0dip" >

        <RelativeLayout
            android:layout_width="120.0dip"
            android:layout_height="90.0dip" >

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="120.0dip"
                android:layout_height="90.0dip"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_video" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5.0dip"
            android:layout_marginStart="5.0dip"
            android:layout_weight="3.0"
            android:gravity="top"
            android:orientation="vertical" >

            <com.greattone.greattone.widget.MyTextView
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/bigtext" />

            <com.greattone.greattone.widget.MyTextView
                android:id="@+id/tv_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text=""
                android:textColor="@color/edit_himi"
                android:textSize="@dimen/bigtext" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="6.0dip"
                android:orientation="horizontal" >

                <com.greattone.greattone.widget.MyTextView
                    android:id="@+id/tv_plays"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:drawableLeft="@drawable/icon_bf"
                    android:drawableStart="@drawable/icon_bf"
                    android:drawablePadding="4.0dip"
                    android:gravity="center|start"
                    android:text="0"
                    android:textColor="@color/red_b90006"
                    android:textSize="14.0sp" />

                <com.greattone.greattone.widget.MyTextView
                    android:id="@+id/tv_comments"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:drawableLeft="@drawable/icon_pl"
                    android:drawableStart="@drawable/icon_pl"
                    android:drawablePadding="4.0dip"
                    android:gravity="center|start"
                    android:text="0"
                    android:textColor="@color/red_b90006"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>