<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_add_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
           />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="8dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <com.greattone.greattone.widget.MyTextView
                    android:id="@+id/tv_add_friend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安某某"
                    android:singleLine="true"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_add_freidnd_approve"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_v" />
            </LinearLayout>

            <com.greattone.greattone.widget.MyTextView
                android:id="@+id/tv_add_frend_statue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="手机联系人：王文金"
                android:textColor="@color/gray_8f8f8f"
                android:textSize="14sp" />
        </LinearLayout>

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_add_freind"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/button_border_white"
            android:gravity="center"
            android:text="关注"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>