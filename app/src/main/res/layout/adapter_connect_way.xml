<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="6.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    android:paddingTop="6.0dip" >
        <TextView
        android:id="@+id/tv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="15sp"
        android:background="@color/gray_8f8f8f" />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
        android:layout_marginStart="8.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_below="@+id/tv_head"
            android:ellipsize="end"
            android:text="上海星辰钢琴制造厂"
            android:textSize="@dimen/midtext" />

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="8.0dip"
        android:layout_marginStart="8.0dip"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal" >

        <com.greattone.greattone.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式："
            android:textSize="@dimen/midtext" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="021-85858686"
            android:textSize="@dimen/midtext" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_phone"
        android:layout_marginLeft="8.0dip"
        android:layout_marginStart="8.0dip"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal" >

        <com.greattone.greattone.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱："
            android:textSize="@dimen/midtext" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="flyxz@126.com"
            android:textSize="@dimen/midtext" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_email"
        android:layout_marginLeft="8.0dip"
        android:layout_marginStart="8.0dip"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.greattone.greattone.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="官网："
            android:textSize="@dimen/midtext" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="www.xingchen.com"
            android:textSize="@dimen/midtext" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_url"
        android:layout_marginLeft="8.0dip"
        android:layout_marginStart="8.0dip"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal" >

        <com.greattone.greattone.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址："
            android:textSize="@dimen/midtext" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="上海市奉贤区南奉公路128号"
            android:textSize="@dimen/midtext" />
    </LinearLayout>

</RelativeLayout>