<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

         <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <com.greattone.greattone.widget.MyTextView
                android:id="@+id/tv_phone_district_num"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_border"
                android:padding="10.0dip"
                android:gravity="center_horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:text="010"
                android:textSize="@dimen/bigtext"
                />

            <com.greattone.greattone.widget.MyEditText
                android:id="@+id/et_phone_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:background="@drawable/login_border"
                android:ellipsize="end"
                android:hint="手机号"
                android:inputType="phone"
                android:lines="1"
                android:padding="10.0dip"
                android:maxLength="11"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/bigtext" />
        </LinearLayout>
 <LinearLayout android:id="@+id/ll_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <com.greattone.greattone.widget.MyEditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/login_border"
                android:ellipsize="end"
                android:hint="验证码"
                android:inputType="phone"
                android:lines="1"
                android:padding="10.0dip"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/bigtext" />

            <com.greattone.greattone.widget.MyTextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:background="@color/red_b90006"
                android:padding="10.0dip"
                android:textColor="@color/white"
                android:text="获取验证码"
                android:textSize="@dimen/midtext" />
        </LinearLayout>
        <com.greattone.greattone.widget.MyEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_border"
            android:ellipsize="end"
            android:hint="密码"
            android:inputType="textPassword"
            android:lines="1"
            android:padding="10.0dip"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/bigtext" />

        <com.greattone.greattone.widget.MyEditText
            android:id="@+id/et_double_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_border"
            android:ellipsize="end"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:lines="1"
            android:padding="10.0dip"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/bigtext" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_sure"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="25.0dip"
            android:background="@color/red_b90006"
            android:gravity="center"
            android:padding="10dp"
            android:text="确认提交"
            android:textColor="@color/white"
            android:textSize="15.0sp" />
    </LinearLayout>

</ScrollView>