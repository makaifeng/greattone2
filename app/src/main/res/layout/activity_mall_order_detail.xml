<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_eeeeee"
    android:orientation="vertical" >
    <LinearLayout android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/gray_8f8f8f"
            android:textStyle="bold"
            android:text="订单号：20152222222222222"/>

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:textSize="15sp"
            android:textColor="@color/red_c30000"
            android:text="交易完成"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ll_title">


        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_camera"/>

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_pic"
            android:layout_toEndOf="@+id/iv_pic"
            android:layout_toLeftOf="@+id/tv_price"
            android:layout_toStartOf="@+id/tv_price"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="15sp"
            android:text="法兰山德sp系列钢琴 SP-210A"
            android:textStyle="bold" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="15sp"
            android:textColor="@color/red_c30000"
            android:text="￥21000"
            />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_pic"
            android:layout_toEndOf="@+id/iv_pic"
            android:layout_below="@+id/tv_title"
            android:padding="5dp"
            android:maxLines="2"
            android:textSize="15sp"
            android:textColor="@color/gray_8f8f8f"
            android:text="产品分类：黑色"
            />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_num"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:maxLines="2"
            android:textSize="15sp"
            android:textColor="@color/gray_8f8f8f"
            android:text="× 1"
            />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_total"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_num"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:maxLines="2"
            android:textSize="15sp"
            android:text="共1件商品  合计：21000.00"
            />

    </RelativeLayout>
    <LinearLayout android:id="@+id/ll_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_content"
        android:layout_marginTop="@dimen/padding10"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <com.greattone.greattone.widget.MyTextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="@string/seller_message"
            />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_seller_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:text="店铺名称：佳音琴行"
            />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_seller_phone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:text="售后电话：021-5888888"
        />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_seller_city"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:text="发货城市：上海市"
        />
    </LinearLayout>
    <LinearLayout android:id="@+id/ll_logistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_seller"
        android:orientation="vertical"
        >
    <LinearLayout android:id="@+id/ll_logistics2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding10"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible"
        >
        <com.greattone.greattone.widget.MyTextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="@string/logistics_message"
            />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_logistics_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:text="物流公司：百世汇通"
            />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_logistics_number"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:text="货运单号：xxxxxxxxxxxxxx"
            />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_logistics_show"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            android:text="物流跟踪：点击查询"
            />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout android:id="@+id/ll_receipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_logistics"
        android:layout_marginTop="@dimen/padding10"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <com.greattone.greattone.widget.MyTextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="@string/receipt_message"
            />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_receipt_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:text="联系人：某某某"
            />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_receipt_phone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:text="联系电话：138xxxxxxxxx"
            />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_receipt_address"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            android:text="收货地址：上海市xxxxxxxxxxxx"
            />
    </LinearLayout>
    <LinearLayout android:id="@+id/ll_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_receipt"
        android:layout_marginTop="@dimen/padding10"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <com.greattone.greattone.widget.MyTextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="@string/pay_and_invoice"
            />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_pay_state"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:text="支付状态：已支付"
            />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_pay_type"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:text="@string/pay_type"
            />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_invoice"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            android:text="发票类型： 不要发票"
            />
    </LinearLayout>
</RelativeLayout>

</ScrollView>

