<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_eeeeee"

    android:orientation="vertical" >
    <LinearLayout android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">


    <com.greattone.greattone.widget.MyTextView
        android:id="@+id/tv_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:singleLine="true"
        android:maxLength="6"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/gray_8f8f8f"
        android:text="佳音琴行"/>
    <com.greattone.greattone.widget.MyTextView
        android:id="@+id/tv_orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:singleLine="true"
        android:layout_weight="1"
        android:textSize="15sp"
        android:textColor="@color/gray_8f8f8f"
        android:textStyle="bold"
        android:text="订单号：20152222222222222"/>
    <com.greattone.greattone.widget.MyTextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="15sp"
        android:textColor="@color/red_c30000"
        android:text="交易完成"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ll_title">


    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_camera"/>

    <com.greattone.greattone.widget.MyTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_pic"
        android:layout_toEndOf="@+id/iv_pic"
        android:layout_toLeftOf="@+id/tv_price"
        android:layout_toStartOf="@+id/tv_price"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="15sp"
        android:text="法兰山德sp系列钢琴 SP-210A"
        android:textStyle="bold" />

    <com.greattone.greattone.widget.MyTextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="15sp"
        android:textColor="@color/red_c30000"
        android:text="￥21000"
        />
    <com.greattone.greattone.widget.MyTextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_pic"
        android:layout_toEndOf="@+id/iv_pic"
        android:layout_below="@+id/tv_title"
        android:padding="5dp"
        android:maxLines="2"
        android:textSize="15sp"
        android:textColor="@color/gray_8f8f8f"
        android:text="产品分类：黑色"
        />
    <com.greattone.greattone.widget.MyTextView
        android:id="@+id/tv_num"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:maxLines="2"
        android:textSize="15sp"
        android:textColor="@color/gray_8f8f8f"
        android:text="× 1"
        />
    <com.greattone.greattone.widget.MyTextView
        android:id="@+id/tv_total"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tv_num"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:maxLines="2"
        android:textSize="15sp"
        android:text="共1件商品  合计：21000.00"
        />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_button1"
            android:layout_height="wrap_content"
            android:layout_width="80dp"
            android:layout_below="@+id/tv_total"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:gravity="center"
            android:ellipsize="marquee"
            android:lines="1"
            android:background="@drawable/mall_button_bg"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="评价"
            />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_button2"
            android:layout_height="wrap_content"
            android:layout_width="80dp"
            android:layout_below="@+id/tv_total"
            android:layout_toLeftOf="@+id/tv_button1"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:padding="5dp"
            android:ellipsize="marquee"
            android:lines="1"
            android:background="@drawable/mall_button_bg2"
            android:textSize="15sp"
            android:text="查看物流"
            />
    </RelativeLayout>

</RelativeLayout>
