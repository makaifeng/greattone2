<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent">
          <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <com.greattone.greattone.widget.MyTextView
                android:id="@+id/tv_phone_district_num"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_border"
                android:padding="10.0dip"
                android:gravity="center_horizontal"
                android:text="010"
                android:textSize="@dimen/bigtext" />

            <com.greattone.greattone.widget.MyEditText
                android:id="@+id/et_phone_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:background="@drawable/login_border"
                android:ellipsize="end"
                android:hint="手机号"
                android:inputType="phone"
                android:lines="1"
                android:padding="10.0dip"
                android:maxLength="11"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/bigtext" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="15.0dip">
            <LinearLayout android:orientation="horizontal" android:background="@drawable/login_border" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1.0">
                <com.greattone.greattone.widget.MyEditText android:textSize="@dimen/bigtext" android:textColor="@color/gray_a5a5a5" android:id="@+id/activity_bindphone_code" android:background="@null" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="验证码" android:inputType="numberSigned" android:maxLength="6"  android:lines="1" android:layout_weight="1.0" />
            </LinearLayout>
            <com.greattone.greattone.widget.MyButton android:textSize="@dimen/bigtext" android:textColor="@color/white" android:id="@+id/activity_bindphone_sendcode" android:background="@color/red_c30000" android:padding="10.0dip" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginLeft="10.0dip" android:text="获取验证码" />
        </LinearLayout>
        <com.greattone.greattone.widget.MyButton android:textSize="@dimen/largetext" android:textColor="@color/white" android:id="@+id/activity_bindphone_commit" android:background="@color/red_b90006" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="15.0dip" android:text="确认修改" />
    </LinearLayout>
</LinearLayout>