<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <com.greattone.greattone.widget.MyRoundImageView
                android:id="@+id/iv_icon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@null" />

            <com.greattone.greattone.widget.MyTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_icon"
                android:layout_toRightOf="@+id/iv_icon" />
            <ImageView android:id="@+id/iv_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/user_share"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>
            <com.greattone.greattone.widget.MyTextView
                android:id="@+id/tv_identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_toEndOf="@+id/iv_icon"
                android:layout_toRightOf="@+id/iv_icon" />
<LinearLayout android:id="@+id/ll_level"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
         android:layout_below="@+id/tv_identity"
                android:layout_toEndOf="@+id/iv_icon"
                android:layout_toRightOf="@+id/iv_icon" 
    android:orientation="horizontal">
            <com.greattone.greattone.widget.MyTextView android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level_hint"
           />
<!--     <ImageView android:id="@+id/iv_level" -->
<!--         android:layout_width="20dp" -->
<!--         android:layout_height="20dp" -->
<!--         android:contentDescription="@null" -->
<!--         android:scaleType="centerCrop"/> -->
</LinearLayout>

            <com.greattone.greattone.widget.MyTextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_level"
                android:layout_toEndOf="@+id/iv_icon"
                android:layout_toRightOf="@+id/iv_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_city"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/iv_icon"
                android:layout_toRightOf="@+id/iv_icon"
                android:orientation="horizontal" >

                <com.greattone.greattone.widget.MyTextView
                    android:id="@+id/tv_my_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/letter" />

                <com.greattone.greattone.widget.MyTextView
                    android:id="@+id/tv_my_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/focus" />
            </LinearLayout>
        </RelativeLayout>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical" >
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/gray_eeeeee" />
      <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_comments"
            style="@style/TeacherOrClassRoomItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="老师介绍" />
              <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/gray_eeeeee" />
        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_recommended_video"
            style="@style/TeacherOrClassRoomItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recommended_video" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/gray_eeeeee" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_course_center"
            style="@style/TeacherOrClassRoomItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/course_center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/gray_eeeeee" />

  



        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_announcements"
            style="@style/TeacherOrClassRoomItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="老师动态" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/gray_eeeeee" />

       <!-- 全部学员 -->

       <com.greattone.greattone.widget.MyTextView
           android:id="@+id/tv_student"
           style="@style/TeacherOrClassRoomItem"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/misic_student"
           android:visibility="visible"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginEnd="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginStart="10dp"
           android:background="@color/gray_eeeeee" />

       <!-- 课程表 -->
       <com.greattone.greattone.widget.MyTextView
           android:id="@+id/tv_table"
           style="@style/TeacherOrClassRoomItem"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/timetable"
           android:visibility="visible"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:layout_marginEnd="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginStart="10dp"
           android:background="@color/gray_eeeeee" />
                        <!-- 讨论区 -->

                <com.greattone.greattone.widget.MyTextView
                    android:id="@+id/tv_tlq"
                    style="@style/TeacherOrClassRoomItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tlq" 
                    android:visibility="visible"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/gray_eeeeee" />
    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_button_bg"
            android:gravity="center"
            android:text="@string/letter" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/tv_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_button_bg"
            android:gravity="center"
            android:text="@string/guanzhu" />
    </LinearLayout>

</RelativeLayout>