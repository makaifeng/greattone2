<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/act_registration_head"
            android:layout_width="60.0dip"
            android:layout_height="45.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/f_navon04" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/act_registration_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingTop="5.0dip"
            android:text="asdadasdasasdasdada"
            android:textSize="18.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10.0dip" >

        <com.greattone.greattone.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程价格："
            android:textSize="16.0sp" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/act_registration_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="￥1200"
            android:textColor="@color/red_c30000"
            android:textSize="16.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10.0dip" >

        <com.greattone.greattone.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课时："
            android:textSize="16.0sp" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/act_registration_num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="10节"
            android:textColor="@color/red_c30000"
            android:textSize="16.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/login_border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.greattone.greattone.widget.MyEditText
            android:id="@+id/et_name"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3.0"
            android:background="@null"
            android:ellipsize="end"
            android:hint="姓名"
            android:lines="1"
            android:padding="10.0dip"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/bigtext" />

        <com.greattone.greattone.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:text="*"
            android:textColor="#ffb90206"
            android:textSize="20.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/login_border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.greattone.greattone.widget.MyEditText
            android:id="@+id/et_phone"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3.0"
            android:background="@null"
            android:ellipsize="end"
            android:hint="手机号"
            android:inputType="number"
            android:lines="1"
            android:padding="10.0dip"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/bigtext" />

        <com.greattone.greattone.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:text="*"
            android:textColor="#ffb90206"
            android:textSize="20.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_registration_applytype_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/login_border"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.greattone.greattone.widget.MyTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:maxLines="1"
            android:padding="10.0dip"
            android:text="支付方式"
            android:textColor="@color/gray_a5a5a5"
            android:textSize="@dimen/bigtext" />

        <com.greattone.greattone.widget.MyTextView
            android:id="@+id/act_registration_applytype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10.0dip"
            android:text="支付宝"
            android:textSize="@dimen/bigtext" />

        <ImageView
            android:layout_width="30.0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_next" />

        <com.greattone.greattone.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:text="*"
            android:textColor="#ffb90206"
            android:textSize="20.0sp" />
    </LinearLayout>

    <com.greattone.greattone.widget.MyTextView
        android:id="@+id/act_registration_commit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@color/red_c30000"
        android:gravity="center"
        android:padding="8.0dip"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="18.0sp" />

</LinearLayout>