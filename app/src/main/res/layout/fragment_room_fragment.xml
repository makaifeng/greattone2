<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10.0dip"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10.0dip" >

                <!-- 机构名称 -->

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:text="机构名称"
                    android:textColor="@color/edit_himi"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyTextView
                    android:id="@+id/fra_room_realname"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text=""
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ffb80008" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10.0dip" >

                <!-- 负责人姓名 -->

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:text="负责人姓名"
                    android:textColor="@color/edit_himi"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyEditText
                    android:id="@+id/fra_room_manager"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:background="@null"
                    android:ellipsize="end"
                    android:lines="1"
                    android:inputType="text"
                    android:text=""
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ffb80008" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/login_border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10.0dip"
                android:visibility="gone" >

                <!-- 手机号码 -->

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:text="手机号码"
                    android:textColor="@color/edit_himi"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyTextView
                    android:id="@+id/fra_room_mobile"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:background="@null"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ffb80008" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/login_border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10.0dip"
                android:visibility="gone" >

                <!-- 邮箱 -->

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:text="邮箱"
                    android:textColor="@color/edit_himi"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyEditText
                    android:id="@+id/fra_room_email"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:background="@null"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ffb80008" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/login_border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10.0dip" >

                <!-- 固定电话 -->

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:text="营业电话"
                    android:textColor="@color/edit_himi"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyEditText
                    android:id="@+id/fra_room_tel"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:background="@null"
                    android:ellipsize="end"
                    android:lines="1"
                    android:autoLink="phone"
                       android:inputType="number|textMultiLine"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ffb80008" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/login_border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10.0dip" >

                <!-- 营业面积 -->

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:text="营业面积"
                    android:textColor="@color/edit_himi"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyEditText
                    android:id="@+id/fra_room_roomsArea"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:background="@null"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text=""
                                   android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平米"
                    android:textColor="@color/edit_himi"
                    android:textSize="@dimen/bigtext" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fra_room_cname_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/login_border"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <!-- 分类 -->

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:padding="10.0dip"
                    android:text="类型"
                    android:textColor="@color/edit_himi"
                    android:textSize="18.0sp" />

                <com.greattone.greattone.widget.MyTextView
                    android:id="@+id/fra_room_cname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10.0dip"
                    android:textColor="@color/edit_himi"
                    android:textSize="18.0sp" />

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_next" />

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:text="*"
                    android:textColor="#ffb90206" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/login_border"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <!-- 城市 -->

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:hint="城市"
                    android:padding="10.0dip"
                    android:textColor="@color/edit_himi"
                    android:textSize="18.0sp" />

                <TextView
                    android:id="@+id/fra_room_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10.0dip"
                    android:textColor="@color/edit_himi"
                    android:textSize="18.0sp" />

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_next" />

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:text="*"
                    android:textColor="#ffb90206" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/login_border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10.0dip" >

                <!-- 详细地址 -->

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:text="详细地址"
                    android:textColor="@color/edit_himi"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyEditText
                    android:id="@+id/fra_room_address"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:background="@null"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ffb80008" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/login_border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10.0dip" 
                android:visibility="gone">

                <!--证件号码 -->

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:text="证件号码"
                    android:textColor="@color/edit_himi"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyEditText
                    android:id="@+id/fra_room_id"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:background="@null"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ffb80008" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/login_border"
                android:orientation="horizontal" >

                <!-- 详细介绍 -->

                <com.greattone.greattone.widget.MyEditText
                    android:id="@+id/fra_room_descr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="center|left|top"
                    android:hint="详细介绍"
                    android:minLines="5"
                    android:padding="10.0dip"
                    android:textColor="@color/yellow_ffa200"
                    android:textSize="18.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="75.0dip"
                android:layout_marginTop="15.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" 
                android:visibility="gone">

                <ImageView
                    android:id="@+id/fra_room_addpic"
                    android:layout_width="75.0dip"
                    android:layout_height="75.0dip"
                    android:src="@drawable/icon_sc" />
                <!-- <com.junseek.haoqinsheng.View.HorizontalListView android:id="@+id/fra_room_addpic_lv" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginLeft="15.0dip" /> -->

                <com.greattone.greattone.widget.MyTextView
                    android:id="@+id/fragment_personal_room_uploadtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:text="上传琴行照片"
                    android:textColor="@color/edit_himi"
                    android:textSize="@dimen/bigtext" />

                <com.greattone.greattone.widget.MyTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:gravity="right"
                    android:text="*"
                    android:textColor="#ffb90206"
                    android:textSize="20.0sp" />
            </LinearLayout> 

            <com.greattone.greattone.widget.MyGridView
                android:id="@+id/gv_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="10dp"
                android:numColumns="4"
                android:verticalSpacing="10dp" />

            <com.greattone.greattone.widget.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="15.0dip"
                android:text="可上传门口一张、接待区一张、内饰两张"
                android:textColor="@color/red_c30000"
                android:textSize="@dimen/bigtext" />

            <com.greattone.greattone.widget.MyButton
                android:id="@+id/fragment_personal_room_commit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30.0dip"
                android:layout_marginTop="25.0dip"
                android:background="@color/red_b90006"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/largetext" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>